    Layout = "_Landing";
}

<section class="hero-copy">
    <span class="eyebrow">Welcome</span>
    <h1>Sign in to BuckScience</h1>
    <p>
        Access your projects, manage properties, and explore your data in one place.
        Use your organization login to continue.
    </p>
    <div class="cta">
        <a class="btn btn-primary" href="/auth/login" aria-label="Sign in">Sign in</a>
        <a class="btn btn-ghost" href="#" aria-label="Learn more">Learn more</a>
    </div>
</section>

<section>
    <div class="panel login-card">
        <h3>Ready to get started?</h3>
