@model BuckScience.Web.ViewModels.PropertyFeatures.PropertyFeatureEditVm
@{
    ViewData["Title"] = $"Edit Feature: {Model.Name ?? "Unnamed"}";
}

<div class="container-fluid h-100 d-flex flex-column">
    <div class="row flex-grow-1">
        <div class="col-12 d-flex flex-column">
            <div class="mb-4">
                <h2>Edit Property Feature</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/properties">
                                <i class="fas fa-map-marked-alt me-1"></i>Properties
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/properties/@Model.PropertyId/details">
                                @Model.PropertyName
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Edit Feature</li>
                    </ol>
                </nav>
            </div>

            <div class="row justify-content-center flex-grow-1">
                <div class="col-lg-8 col-xl-6 d-flex flex-column">
                    <div class="card flex-grow-1">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-edit me-2"></i>Edit Feature Details
                            </h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <form asp-action="Edit" method="post" class="flex-grow-1 d-flex flex-column">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <input asp-for="Id" type="hidden" />
                                <input asp-for="PropertyId" type="hidden" />
                                <input asp-for="GeometryWkt" type="hidden" />

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Feature Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter a custom name for this feature (e.g., 'SE Corner Bean Field')" maxlength="100" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <div class="form-text">Leave blank to use the default feature type name</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ClassificationType" class="form-label">Feature Type</label>
                                    <select asp-for="ClassificationType" asp-items="Model.ClassificationTypeOptions" class="form-select" required>
                                    </select>
                                    <span asp-validation-for="ClassificationType" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Geometry Type</label>
                                    <div class="p-2 border rounded bg-light">
                                        <small class="text-muted">@Model.GeometryType</small>
                                    </div>
                                    <div class="form-text">Geometry shape cannot be changed in this view. Use the map interface for geometry editing.</div>
                                </div>

                                <div class="mb-4 flex-grow-1">
                                    <label asp-for="Notes" class="form-label">Notes</label>
                                    <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Add any notes about this feature..." maxlength="500"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-between mt-auto">
                                    <a href="/properties/@Model.PropertyId/details" class="btn btn-custom-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-custom-primary">
                                        <i class="fas fa-save me-1"></i>Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Trigger map layer update when this view loads
        document.addEventListener('DOMContentLoaded', function() {
            if (window.App && window.App.triggerMapLayerUpdate) {
                window.App.triggerMapLayerUpdate({ 
                    featureId: @Model.Id,
                    propertyId: @Model.PropertyId 
                });
            }
        });
    </script>
}