@{
    Layout = null;
    @inject Microsoft.Extensions.Configuration.IConfiguration Configuration
    var sidebarClass = ViewBag.SidebarWide == true ? "sidebar-overlay sidebar-wide" : "sidebar-overlay";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuckScience</title>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />
    <link href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.css" rel="stylesheet" />
    <link href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-draw/v1.4.2/mapbox-gl-draw.css" rel="stylesheet" />
    <meta name="mapbox-token" content="@Configuration["Mapbox:AccessToken"]" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Mini Navbar -->
    <nav id="mini-navbar">
        <div class="nav-top">
            <div class="nav-logo nav-logo-text">B</div>
            <a href="/properties" title="Add">
                <i class="fas fa-map-marked"></i>
                <span>Hunt Areas</span>
            </a>
            <a href="/bucktrax" title="BuckTrax" style="margin-top: 60px;">
                <i class="fas fa-route"></i>
                <span>BuckTrax</span>
            </a>
            <a href="/buckcast" title="BuckCast" style="margin-top: 10px;">
                <i class="fas fa-chart-line"></i>
                <span>BuckCast</span>
            </a>
        </div>
        <div class="nav-bottom">
            <a href="/account" title="Account">
                <i class="fas fa-user-circle"></i>
                <span>Account</span>
            </a>
            <a href="/account/settings" title="Settings">
                <i class="fas fa-gear"></i>
                <span>Settings</span>
            </a>
        </div>
    </nav>

    <!-- Sidebar where MVC views render -->
    <aside id="sidebar" class="@sidebarClass">
        <div id="sidebar-content">
            @RenderBody()
        </div>
    </aside>

    <!-- Sidebar Toggle Button (outside sidebar) -->
    <button id="sidebar-toggle" class="btn sidebar-toggle">
        <i class="fas fa-chevron-left" style="color: #fff; font-size: 20px;"></i>
    </button>

    <!-- Map area -->
    <main class="map-area">
        <div id="map"></div>
        <div id="geocoder"></div>
    </main>

    <!-- Scripts -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.min.js"></script>
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-draw/v1.4.2/mapbox-gl-draw.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/map-init.js"></script>
    <script src="~/js/navbar.js"></script>
    <script src="~/js/sidebar.js"></script>
    <script src="~/js/feature-utils.js"></script>
    <script src="~/js/properties.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>