@{
    Layout = null;
    @inject Microsoft.Extensions.Configuration.IConfiguration Configuration
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuckScience</title>

    <!-- Mapbox GL CSS -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />
    <link href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.css" rel="stylesheet" />
    <link href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-draw/v1.4.2/mapbox-gl-draw.css" rel="stylesheet" />

    
    <!-- Expose token from configuration -->
    <meta name="mapbox-token" content="@Configuration["Mapbox:AccessToken"]" />

    <!-- Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: sans-serif;
        }

        #map {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 60px;
            right: 0;
        }

        #geocoder {
            position: absolute;
            top: 10px;
            left: 70px;
            z-index: 1;
            width: 300px;
        }

        .mapboxgl-ctrl-top-left {
            top: 50px !important;
        }

        .mapboxgl-ctrl {
            z-index: 2;
        }

        .map-tools {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 2;
        }

        #mini-navbar {
            width: 80px;
            background-color: #1e1e2f;
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px 0;
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 10;
            justify-content: space-between; /* Space between top and bottom items */
        }

            #mini-navbar .nav-top,
            #mini-navbar .nav-bottom {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            #mini-navbar a {
                text-align: center;
                margin: 10px 0;
                color: #aaa;
                font-size: 18px;
                text-decoration: none;
            }

                #mini-navbar a:hover {
                    color: #fff;
                }

            #mini-navbar span {
                font-size: 10px;
                display: block;
            }

        .nav-logo {
            font-size: 22px;
            margin-bottom: 20px;
        }

        .map-area {
            height: 100%;
            position: relative;
        }
    </style>
</head>
<body>

    <!-- Mini Navbar -->
    <nav id="mini-navbar">
        <div class="nav-top">
            <div class="nav-logo nav-logo-text">B</div>
            <a href="#properties" title="Add">
                <i class="fas fa-map-marked"></i>
                <span>Hunt Areas</span>
            </a>
        </div>
        <div class="nav-bottom">
            <a href="#account" title="Account">
                <i class="fas fa-user-circle"></i>
                <span>Account</span>
            </a>
            <a href="#settings" title="Settings">
                <i class="fas fa-gear"></i>
                <span>Settings</span>
            </a>
        </div>
    </nav>

    <!-- Sidebar where MVC views render -->
    <aside id="sidebar" class="sidebar-overlay" style="position: absolute; left: 80px; top: 0; bottom: 0; min-width: 380px; width: max-content; z-index: 20;">
                <div id="sidebar-content">
            @RenderBody()
        </div>
    </aside>

    <!-- Sidebar Toggle Button (outside sidebar) -->
    <button id="sidebar-toggle" class="btn sidebar-toggle">
        <i class="fas fa-chevron-left" style="color: #fff; font-size: 20px;"></i>
    </button>

    <!-- Map area -->
    <main class="map-area">
        <div id="map"></div>
        <div id="geocoder"></div>
    </main>

    <!-- Scripts -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.min.js"></script>
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-draw/v1.4.2/mapbox-gl-draw.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/map-init.js"></script>
    <script src="~/js/navbar.js"></script>
    <script src="~/js/sidebar.js"></script>
    <script src="~/js/properties.js"></script>

    @* Render optional per-page scripts here *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
