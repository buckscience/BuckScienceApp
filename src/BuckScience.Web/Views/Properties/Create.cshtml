@using BuckScience.Web.ViewModels.Properties
@model PropertyCreateVm
@{
    ViewData["Title"] = "Create Property";
}
<h1>Create Property</h1>

@if (TempData["CreatedId"] is int id)
{
    <div class="alert alert-success">Created Property with Id @id</div>
}

<form asp-action="Create" method="post" novalidate>
    @Html.AntiForgeryToken()
    <div class="alert alert-info mb-4" role="alert">
        <div class="d-flex align-items-start">
            @if (Context.Request.Query["fromSetup"] == "1")
            {
                <div class="me-3">
                    <span class="badge bg-primary">Step 1</span>
                </div>
            }
            <div class="flex-grow-1">
                <h5 class="mb-2">Add a hunting property</h5>
                <p class="mb-2">Properties help organize your cameras and photos by location.</p>
                <ol class="mb-0">
                    <li>Give your property a clear name (e.g., “Main Farm” or “North Woods”).</li>
                    <li>Use the search below or click the map to set location.</li>
                    <li>Save to continue to adding your first camera.</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="e.g., North Woods" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Geocoder mount point -->
    <div class="mb-3">
        <label class="form-label">Search location</label>
        <div id="property-geocoder"></div>
        <small class="form-text text-muted">
            Tip: Search a place or address, click the map, or drag the pin to fine‑tune.
        </small>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Latitude" class="form-label"></label>
            <input asp-for="Latitude" class="form-control" step="any" placeholder="e.g., 40.7128" />
            <span asp-validation-for="Latitude" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Longitude" class="form-label"></label>
            <input asp-for="Longitude" class="form-control" step="any" placeholder="e.g., -74.0060" />
            <span asp-validation-for="Longitude" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-md-6">
            <label asp-for="TimeZone" class="form-label"></label>
            <input asp-for="TimeZone" class="form-control" placeholder="e.g., America/Chicago or UTC" />
            <span asp-validation-for="TimeZone" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="DayHour" class="form-label"></label>
            <input asp-for="DayHour" type="number" class="form-control" />
            <span asp-validation-for="DayHour" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="NightHour" class="form-label"></label>
            <input asp-for="NightHour" type="number" class="form-control" />
            <span asp-validation-for="NightHour" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}