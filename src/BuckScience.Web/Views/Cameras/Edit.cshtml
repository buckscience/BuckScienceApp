@model BuckScience.Web.ViewModels.Cameras.CameraEditVm
@{
    ViewData["Title"] = $"Edit Camera: {Model.Name}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h2>Edit Camera: @Model.Name</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="javascript:void(0)" onclick="window.App.loadSidebar('/properties', { push: true })">
                                <i class="fas fa-map-marked-alt me-1"></i>Properties
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="javascript:void(0)" onclick="window.App.loadSidebar('/properties/@Model.PropertyId/details', { push: true })">
                                @ViewBag.PropertyName
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/cameras/@Model.Id/details">@Model.Name</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-edit me-2"></i>Edit Camera Details
                            </h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="Edit" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <input asp-for="Id" type="hidden" />
                                <input asp-for="PropertyId" type="hidden" />

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Camera Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="e.g., Gate Cam, Ridge Cam" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Brand" class="form-label">Brand</label>
                                        <input asp-for="Brand" class="form-control" placeholder="e.g., Reconyx, Stealth Cam" />
                                        <span asp-validation-for="Brand" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Model" class="form-label">Model</label>
                                        <input asp-for="Model" class="form-control" placeholder="e.g., HyperFire 2" />
                                        <span asp-validation-for="Model" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row g-3 mt-1">
                                    <div class="col-md-6">
                                        <label asp-for="Latitude" class="form-label">Latitude</label>
                                        <input asp-for="Latitude" class="form-control" step="any" placeholder="e.g., 40.7128" />
                                        <span asp-validation-for="Latitude" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Longitude" class="form-label">Longitude</label>
                                        <input asp-for="Longitude" class="form-control" step="any" placeholder="e.g., -74.0060" />
                                        <span asp-validation-for="Longitude" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-check form-switch mt-3 mb-4">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive">Camera is active</label>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a href="/cameras/@Model.Id/details" class="btn btn-custom-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-custom-primary">
                                        <i class="fas fa-save me-1"></i>Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}