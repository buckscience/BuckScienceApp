@model IEnumerable<BuckScience.Web.ViewModels.Cameras.CameraListItemVm>
@{
    ViewData["Title"] = $"Cameras - {ViewBag.PropertyName}";
}

<div class="container-fluid h-100 d-flex flex-column">
    <div class="d-flex flex-column h-100">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="sidebar-title">Cameras - @ViewBag.PropertyName</h2>
            <a href="/properties/@ViewBag.PropertyId/details" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to Property
            </a>
        </div>
        <hr class="sidebar-title-separator" />
        
        <div class="camera-list flex-grow-1 d-flex flex-column">
            <div class="flex-grow-1">
                @if (Model.Any())
                {
                    @foreach (var camera in Model)
                    {
                        <div class="camera-item border rounded p-3 mb-3" data-id="@camera.Id">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="camera-info flex-grow-1">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="camera-icon me-2">
                                            <i class="fas fa-camera text-primary"></i>
                                        </div>
                                        <div class="camera-name h5 mb-0">@camera.LocationName</div>
                                        <span class="badge @(camera.IsActive ? "bg-success" : "bg-secondary") ms-2">
                                            @(camera.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                    <div class="camera-meta text-muted small">
                                        <div class="mb-1">
                                            <strong>Brand:</strong> @camera.Brand @(!string.IsNullOrEmpty(camera.Model) ? $"/ {camera.Model}" : "")
                                        </div>
                                        <div class="mb-1">
                                            <strong>Location:</strong> @camera.Latitude.ToString("F6"), @camera.Longitude.ToString("F6")
                                        </div>
                                        <div class="mb-1">
                                            <strong>Photos:</strong> @camera.PhotoCount
                                        </div>
                                        <div>
                                            <strong>Created:</strong> @camera.CreatedDate.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                </div>
                                <div class="camera-actions">
                                    <a href="/cameras/@camera.Id/details" class="btn btn-outline-primary btn-sm me-1" title="View Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a href="/properties/@ViewBag.PropertyId/cameras/@camera.Id/edit" class="btn btn-outline-secondary btn-sm me-1" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/cameras/@camera.Id/upload" class="btn btn-outline-success btn-sm" title="Upload Photos">
                                        <i class="fas fa-upload"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-camera fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No cameras yet</h4>
                        <p class="text-muted">Add your first camera to start tracking photos for this property.</p>
                    </div>
                }
            </div>
            
            <div class="camera-list-actions mt-4">
                <a href="/properties/@ViewBag.PropertyId/cameras/add" class="btn btn-primary w-100">
                    <i class="fas fa-plus"></i> Add Camera
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Trigger map layer update for this property when the view loads
        document.addEventListener('DOMContentLoaded', function() {
            if (window.App && window.App.triggerMapLayerUpdate) {
                window.App.triggerMapLayerUpdate({ propertyId: @ViewBag.PropertyId });
            }
        });
    </script>
}