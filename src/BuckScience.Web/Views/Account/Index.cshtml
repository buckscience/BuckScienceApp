@{
    ViewData["Title"] = "Account";
}

<div class="container-fluid h-100 d-flex flex-column">
    <div class="d-flex flex-column h-100">
        <h2 class="sidebar-title">Account</h2>
        <hr class="sidebar-title-separator" />
        
        <div class="account-content flex-grow-1">
            
            <!-- User Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Profile Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Name:</strong> @ViewBag.UserName</p>
                            <p class="mb-2"><strong>Email:</strong> @ViewBag.UserEmail</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Current Plan:</strong> 
                                <span class="badge bg-primary">@ViewBag.SubscriptionTier</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>Account Management
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="/subscription" class="btn btn-primary btn-lg">
                                    <i class="fas fa-crown me-2"></i>Manage Subscription
                                </a>
                                <small class="text-muted mt-1">View and modify your subscription plan</small>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="/account/settings" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-gear me-2"></i>Account Settings
                                </a>
                                <small class="text-muted mt-1">Manage your account preferences</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Account Overview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="border-end">
                                <h4 class="text-primary mb-1">
                                    <i class="fas fa-map-marked-alt"></i>
                                </h4>
                                <p class="small text-muted mb-0">Hunt Areas</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-end">
                                <h4 class="text-success mb-1">
                                    <i class="fas fa-camera"></i>
                                </h4>
                                <p class="small text-muted mb-0">Cameras</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h4 class="text-info mb-1">
                                <i class="fas fa-image"></i>
                            </h4>
                            <p class="small text-muted mb-0">Photos</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>