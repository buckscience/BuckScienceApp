@model BuckScience.Web.ViewModels.Profiles.ProfileEditVm
@{
    ViewData["Title"] = $"Edit Profile: {Model.Name}";
}

<div class="container-fluid h-100 d-flex flex-column">
    <div class="row flex-grow-1">
        <div class="col-12 d-flex flex-column">
            <div class="mb-4">
                <h2>Edit Profile: @Model.Name</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/properties">
                                <i class="fas fa-map-marked-alt me-1"></i>Properties
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/properties/@Model.PropertyId/details">
                                @Model.PropertyName
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/profiles/@Model.Id">@Model.Name</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>
            </div>

            <div class="row justify-content-center flex-grow-1">
                <div class="col-lg-8 col-xl-6 d-flex flex-column">
                    <div class="card flex-grow-1">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-edit me-2"></i>Edit Profile Details
                            </h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <form asp-action="Edit" method="post" class="flex-grow-1 d-flex flex-column">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <input asp-for="Id" type="hidden" />
                                <input asp-for="PropertyId" type="hidden" />

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Profile Name</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Tag</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                        <input value="@Model.TagName" class="form-control" readonly />
                                    </div>
                                    <div class="form-text">Tag cannot be changed after profile creation.</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ProfileStatus" class="form-label">Status</label>
                                    <select asp-for="ProfileStatus" asp-items="Model.ProfileStatusOptions" class="form-select">
                                    </select>
                                    <span asp-validation-for="ProfileStatus" class="text-danger"></span>
                                </div>

                                <div class="mb-4 flex-grow-1">
                                    <label asp-for="CoverPhotoUrl" class="form-label">Cover Photo URL</label>
                                    <input asp-for="CoverPhotoUrl" class="form-control" placeholder="Leave empty to auto-select the most recent photo" />
                                    <span asp-validation-for="CoverPhotoUrl" class="text-danger"></span>
                                    <div class="form-text">Optional: Specify a custom cover photo URL, or leave empty to use the most recent tagged photo.</div>
                                    
                                    @if (!string.IsNullOrEmpty(Model.CoverPhotoUrl))
                                    {
                                        <div class="mt-2">
                                            <img src="@Model.CoverPhotoUrl" 
                                                 class="img-thumbnail" 
                                                 alt="Current cover photo"
                                                 style="max-height: 100px; object-fit: cover;" />
                                        </div>
                                    }
                                </div>

                                <div class="d-flex justify-content-between mt-auto">
                                    <a href="/profiles/@Model.Id" class="btn btn-custom-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-custom-primary">
                                        <i class="fas fa-save me-1"></i>Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Trigger map layer update when this view loads
        document.addEventListener('DOMContentLoaded', function() {
            if (window.App && window.App.triggerMapLayerUpdate) {
                window.App.triggerMapLayerUpdate({ 
                    profileId: @Model.Id,
                    propertyId: @Model.PropertyId 
                });
            }
        });
    </script>
}